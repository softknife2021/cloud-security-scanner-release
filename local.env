# ===========================================
# Cloud Security Scanner - Environment Config
# ===========================================

# Database
DB_PASSWORD=secpass123
DB_PORT=5433

# Backend
APP_PORT=8080
JWT_SECRET=MySecureJWTSecretKeyForProductionPleaseChangeThisToAStrongRandomValue
JWT_EXPIRATION_MS=86400000
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SHOW_SQL=false

# UI
UI_PORT=3000

# Scanner Agent (optional - enable with: --profile scanner)
AGENT_ID=scanner-agent-001
POLL_INTERVAL=30
SCANNER_JWT_TOKEN=AUTO_GENERATED_BY_START_ALL_SH
SCANNER_LOG_LEVEL=INFO

# UI Test Agent (optional - enable with: --profile ui-test)
UI_TEST_AGENT_ID=ui-test-agent-001
UI_TEST_POLL_INTERVAL=30
UI_TEST_USERNAME=admin
UI_TEST_PASSWORD=admin123
UI_TEST_LOG_LEVEL=INFO

# S3/MinIO Storage (optional - enable with: --profile storage)
S3_ENABLED=false
S3_BUCKET=scan-results
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Vulnerable Test Target (optional - enable with: --profile target)
DVWA_PORT=8888
